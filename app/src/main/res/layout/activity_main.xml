<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acadgild.musicplayer.MainActivity">
    <Button
        android:id="@+id/strt_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="START MUSIC"
        android:layout_marginBottom="37dp"
        android:layout_above="@+id/stop_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/stop_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="STOP MUSIC"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/strt_btn"
        android:layout_alignStart="@+id/strt_btn"
        android:layout_marginBottom="189dp" />



</RelativeLayout>
